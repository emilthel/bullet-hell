script/source = "extends Area2D
var invincible = false

@export var enemy_layer = 2
@export var goal_layer = 4
@export var max_blood: float = 2
@export var lives = 2

@onready var blood = max_blood
@onready var test = max_blood
@onready var invincibility_timer = $InvincibilityTimer
@onready var bg = $Node/BG
@onready var health_bar =  $Node/HealthBar
@onready var screen_rect = get_viewport_rect()
@onready var slow_mo = $Node/SlowMo
@onready var progress_bar = $Node/ProgressBar
@onready var progress_bar_cover = $Node/ProgressBarCover
@onready var lives_counter = $Node/LivesCounter
@onready var goals_collected = 0

var level

func _ready() -> void:
	lives_counter.text = str(lives)
	
# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(_delta: float) -> void:
	global_position = get_global_mouse_position()
	if blood > max_blood:
		blood = max_blood
	bg.modulate.a = invincibility_timer.time_left
	health_bar.scale.x = blood/max_blood
	progress_bar.scale.x = 0.1 * goals_collected
	#print(slow_mo.process_mode)

func _on_invincibility_timer_timeout() -> void:
	invincible = false

func _die():
	lives -= 1
	if lives == 0:
		get_tree().quit()
	lives_counter.text = str(lives)
	level.enter_transition()				
	blood = max_blood

func on_transition_entered():
	var new_screen = level.get_next_screen()
	progress_bar_cover.scale.x = 0.1 * (new_screen.goals_needed -1)
	goals_collected = 0
	
func _on_area_entered(area: Area2D) -> void:
	if area.collision_layer == enemy_layer:
		if not invincible:
			blood -= area.damage 
			if blood <= 0: #Death
				_die()
			invincibility_timer.start()
			invincible = true
			
			
	if area.collision_layer == goal_layer:
		if area.mode == area.SCREEN_CHANGE:
			level.next_screen()
		if area.mode == area.SCRIPT:
			area.on_collected.call()
		area.queue_free()
		blood += area.heal
		
	slowmo_activate()
	
func slowmo_activate():
	slow_mo.process_mode = Node.PROCESS_MODE_INHERIT
	slow_mo.visible = true
"

