[sub_resource type="GDScript" id="GDScript_gp44b"]
script/source = "extends Area2D
var invincible = false

@export var enemy_layer = 2
@export var goal_layer = 4
@export var max_blood: float = 2

@onready var blood = max_blood
@onready var test = max_blood
@onready var invincibility_timer = $InvincibilityTimer
@onready var bg = $Node/BG
@onready var health_bar =  $Node/HealthBar
@onready var screen_rect = get_viewport_rect()
var level

# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(_delta: float) -> void:
	global_position = get_global_mouse_position()
	if blood > max_blood:
		blood = max_blood
	bg.modulate.a = invincibility_timer.time_left
	health_bar.scale.x = blood/max_blood
	



func _on_area_entered(area: Area2D) -> void:
	if area.collision_layer == enemy_layer:
		if not invincible:
			blood -= area.damage 
			if blood <= 0:
				get_tree().quit()
			
			invincibility_timer.start()
			invincible = true
			
			
	if area.collision_layer == goal_layer:
		if area.mode == area.SCREEN_CHANGE:
			level.next_screen()
		if area.mode == area.SCRIPT:
			area.on_collected.call()
		area.queue_free()
		blood += area.heal
		
		


func _on_invincibility_timer_timeout() -> void:
	invincible = false
"

